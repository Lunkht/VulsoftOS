<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00F260"
                android:centerColor="#0575E6"
                android:endColor="#00F260"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item 
        android:top="2dp" 
        android:bottom="2dp" 
        android:left="2dp" 
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A1A2E" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>