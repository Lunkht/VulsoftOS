<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerApps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@id/searchBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAppsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:paddingHorizontal="16dp"
        android:scrollbarSize="0.1dp"
        app:layout_constraintBottom_toTopOf="@id/searchBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/search_bg"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/layoutPageIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="Rechercher..."
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/btnCategories"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/apps"
            app:tint="?attr/colorOnSurface" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/dot_layout_bg"
        app:layout_constraintBottom_toTopOf="@id/recyclerDock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Dock Background View -->
    <View
        android:id="@+id/dockBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/recyclerDock"
        app:layout_constraintEnd_toEndOf="@id/recyclerDock"
        app:layout_constraintTop_toTopOf="@id/recyclerDock"
        app:layout_constraintBottom_toBottomOf="@id/recyclerDock" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="15dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Notch Overlay -->
    <View
        android:id="@+id/notchOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:visibility="gone"
        android:elevation="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dynamic Island -->
    <View
        android:id="@+id/dynamicIsland"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_dynamic_island"
        android:visibility="gone"
        android:elevation="101dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>