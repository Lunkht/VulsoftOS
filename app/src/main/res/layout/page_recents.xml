<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Récents"
        android:textSize="32sp"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:fontFamily="sans-serif-medium"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Empty State -->
        <TextView
            android:id="@+id/textEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Aucune application récente"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="sans-serif"/>

        <!-- Permission State -->
        <LinearLayout
            android:id="@+id/layoutPermission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:tint="?android:attr/textColorPrimary"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autorisation nécessaire"
                android:textSize="22sp"
                android:textColor="?android:attr/textColorPrimary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vulsoft OS a besoin d'accéder à vos statistiques d'utilisation pour afficher les applications récentes."
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnGrantPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autoriser l'accès"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPageApps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false" />
            
    </FrameLayout>
</LinearLayout>
