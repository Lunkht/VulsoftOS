<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/settingsBackground"
    android:padding="1dp">
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/arrow_small"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/faq_title"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Status d'intégration -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq_integration_status_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/txtIntegrationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq_integration_checking"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section: Installation et Configuration -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_section_installation"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Q1: Définir comme launcher par défaut -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a1"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:id="@+id/btnSystemSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_squircle"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faq_btn_system_settings"
                    android:textColor="?attr/colorOnSurface" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_back_ios"
                    android:rotation="180"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Q2: Permissions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q2"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a2"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:id="@+id/btnNotificationSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_squircle"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faq_btn_notification"
                    android:textColor="?attr/colorOnSurface" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_back_ios"
                    android:rotation="180"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Section: Personnalisation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_section_customization"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Q3: Thèmes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q3"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a3"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q4: Widgets personnalisables -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q4"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a4"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q5: Couleurs de widgets -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q5"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a5"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Section: Gestion des Applications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_section_apps"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Q6: Réorganiser les apps -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q6"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a6"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q7: Dock -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q7"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a7"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Section: Fonctionnalités Avancées -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_section_advanced"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Q8: Recherche -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q8"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a8"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q9: Gestes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q9"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a9"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q: Assistant -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q10"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a10"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q: Recent Apps -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q11"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a11"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Section: Dépannage -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_section_troubleshooting"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Q10: Performance -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q12"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a12"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q11: Bugs -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q13"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a13"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Q12: Réinitialisation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q14"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a14"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />

            <!-- Section: À propos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_section_about"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_about_desc"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
