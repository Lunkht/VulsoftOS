<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/bottom_sheet_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic Island"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/lblStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style visuel"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorSurfaceVariant"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <LinearLayout
        android:id="@+id/styleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/lblStyle">

        <!-- Style Items will be added dynamically or hardcoded here -->
        <!-- Standard -->
        <LinearLayout
            android:id="@+id/styleStandard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/bg_dynamic_island"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <!-- Glass Dark -->
        <LinearLayout
            android:id="@+id/styleGlassDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/bg_dynamic_island_glass_dark"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verre Sombre"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <!-- Glass Blur -->
        <LinearLayout
            android:id="@+id/styleGlassBlur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/bg_dynamic_island_glass_blur"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verre Flou"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>
        
        <!-- Liquid Blue -->
        <LinearLayout
            android:id="@+id/styleLiquidBlue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/bg_dynamic_island_liquid_blue"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liquide"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnTestNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tester une notification"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/containerSettings" />

    <LinearLayout
        android:id="@+id/containerSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/styleContainer">

        <!-- Duration Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durée d'affichage"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorSurfaceVariant" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <SeekBar
                android:id="@+id/seekDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="8"
                android:progress="2" />
            <TextView
                android:id="@+id/lblDurationValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="4s"
                android:gravity="end"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>

        <!-- Y Offset Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajustement Vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorSurfaceVariant"
            android:layout_marginTop="16dp" />
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <SeekBar
                android:id="@+id/seekYOffset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />
            <TextView
                android:id="@+id/lblYOffsetValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0dp"
                android:gravity="end"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>

        <!-- Notch Position Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position de l'encoche"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorSurfaceVariant"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            
            <RadioButton
                android:id="@+id/rbPositionCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centrée"
                android:layout_weight="1" />
                
            <RadioButton
                android:id="@+id/rbPositionLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gauche"
                android:layout_weight="1" />
        </RadioGroup>

        <!-- Hide in Landscape Switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchHideInLandscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masquer en mode paysage"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorSurfaceVariant"
            android:layout_marginTop="16dp" />

    </LinearLayout>
        
    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nécessite la permission d'accessibilité ou de superposition pour fonctionner correctement."
        android:textSize="11sp"
        android:textColor="?attr/colorSurfaceVariant"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnTestNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>
